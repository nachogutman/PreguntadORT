@{
    ViewData["Title"] = "Jugar";
}

<div class="question">
    <h1>@ViewBag.Pregunta.Enunciado</h1>   
</div>

<div style="width: 100%;">
    
    <img src="@ViewBag.Pregunta.Foto" class="foto" alt="">    
</div>

    <div class="mt-5 mb-5" style="width: 90%; margin:auto;">
        <div class="row g-3 d-flex align-items-center">
            @foreach (Respuesta resp in @ViewBag.Respuestas)
            {                         
                <div class="col-6">
                    @if (@ViewBag.FueRespondida == true)
                    {
                        if(resp.IdRespuesta == @ViewBag.RespuestaCorrecta){
                            <p class="answers" style="background-color: green;" href='@Url.Action("VerificarRespuesta", "Home", new {idRespuesta = @resp.IdRespuesta, idPregunta = @ViewBag.Pregunta.IdPregunta})'> @resp.Contenido </p>
                        }else if(resp.IdRespuesta == @ViewBag.RespuestaIncorrecta){
                            <p class="answers" style="background-color: red;" href='@Url.Action("VerificarRespuesta", "Home", new {idRespuesta = @resp.IdRespuesta, idPregunta = @ViewBag.Pregunta.IdPregunta})'> @resp.Contenido </p>
                        }else{
                            <p class="answers" href='@Url.Action("VerificarRespuesta", "Home", new {idRespuesta = @resp.IdRespuesta, idPregunta = @ViewBag.Pregunta.IdPregunta})'> @resp.Contenido </p>
                        }                        
                    }else{
                        <a class="answers" href='@Url.Action("VerificarRespuesta", "Home", new {idRespuesta = @resp.IdRespuesta, idPregunta = @ViewBag.Pregunta.IdPregunta})'> @resp.Contenido </a>
                    }

                    
                </div>                             
            }
        </div>
    </div>

@if (@ViewBag.FueRespondida == true){
    <div class="text-center mb-5">
        <a class="button text-center" style="text-decoration:none;" href='@Url.Action("Jugar", "Home")'>Siguiente pregunta</a>
    </div>    
}

