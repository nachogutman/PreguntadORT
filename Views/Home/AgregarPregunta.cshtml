@{
    ViewData["Title"] = "AgregarPregunta";
}

<div class="container">
    <h1 class="mt-5 text-dark">Crear Pregunta</h1>    

    <form class="mt-4" method="post" action='@Url.Action("GuardarPregunta", "Home")' enctype="multipart/form-data">

        <div class="form-group mb-4">
            <label class="h2" > Categoria </label>
            @foreach(Categoria cat in @ViewBag.Categorias){
                    <div class="form-check text-black">
                        <label class="form-check-label" for="inlineRadio1" style="font-size: 23px;"> @cat.Nombre </label>
                        <input class="form-check-input" type="radio" name="IdCategoria" required id="inlineRadio1" value=@cat.IdCategoria>
                    </div>
                }
        </div>

        <div class="form-group mb-4">
            <label class="h2"> Dificultad </label>
            @foreach(Dificultad dif in @ViewBag.Dificultades){
                <div class="form-check text-black">
                    <label class="form-check-label" for="inlineRadio1" style="font-size: 23px;"> @dif.Nombre </label>
                    <input class="form-check-input" type="radio" name="IdDificultad" required id="inlineRadio1" value=@dif.IdDificultad>
                </div>
            }
        </div>

        <div class="form-group mb-4">
            <label class="h2">Enunciado</label>
            <input type="text" class="form-control opacity-75 forms" style="width: 75%;" name="Enunciado" autocomplete="off" required>
        </div>

        <div class="form-group mb-4">
            <label class="h2">Foto de la pregunta</label>
            <input type="file" class="form-control-file d-flex justify-content-end opacity-75 forms" name="Foto" autocomplete="off" required>
        </div>        
        
        <button type="submit" class="btn btn-dark mt-4" style="float: right; margin-right:7%;">Crear pregunta</button>
    </form>

</div>



