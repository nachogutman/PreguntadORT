@{
    ViewData["Title"] = "AgregarRespuesta";
}

<div class="container">

    <h1 class="mt-5 text-dark">Crear Respuesta</h1>        

    <form class="mt-4" method="post" action='@Url.Action("GuardarRespuesta", "Home")' enctype="multipart/form-data">

        <input type="hidden" name="IdPregunta" id="" value="@ViewBag.IdPregunta">        

        <div class="form-group mb-4">
            <label class="h2">Contenido</label>
            <input type="text" class="form-control opacity-75 forms" style="width: 75%;" name="Contenido" autocomplete="off" required>
        </div>

        <div class="form-group mb-4">
            <label class="h2"> Valor </label>
            <div class="form-check text-black">
                <label class="form-check-label" for="inlineRadio1"> Correcta </label>
                <input class="form-check-input" type="radio" name="Correcta" required id="inlineRadio1" value="true">
            </div>
            <div class="form-check text-black">
                <label class="form-check-label" for="inlineRadio1"> Incorrecta </label>
                <input class="form-check-input" type="radio" name="Correcta" required id="inlineRadio1" value="false">
            </div>
            
        </div>  
        
        <button type="submit" class="btn btn-dark mt-5" style="float: right;">Crear Respuesta</button>
    </form>

</div>
